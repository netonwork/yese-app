  "logo": "/logo.png",
  "domain": "https://yese.tv",
  "version": "2.1.0",
  "api": {
    "baseUrl": "/api",
    "timeout": 30000,
    "version": "v2",
    "endpoints": {
      "auth": "/auth",
      "video": "/videos",
      "user": "/user",
      "vip": "/vip",
      "share": "/share",
      "upload": "/upload"
    }
  },
  "cdn": {
