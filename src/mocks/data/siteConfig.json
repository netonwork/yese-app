      },
      "wechat": {
        "appId": "wx1234567890abcdef",
        "mchId": "1234567890"
      }
    },
    "push": {
      "jpush": {
        "appKey": "1234567890abcdef"
      },
      "firebase": {
        "projectId": "yese-video-app"
      }
    }
  },
