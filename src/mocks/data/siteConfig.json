    "videoDecryptKey": "yese_video_2024_ultra_secure_key_v2",
    "audioDecryptKey": "yese_audio_2024_secure_key_v2",
    "algorithm": "AES-256-GCM",
    "keyRotationInterval": 168
  },
  "features": {
    "enableVip": true,
    "enableShare": true,
    "enableCoins": true,
    "enableDownload": true,
    "enableOffline": true,
    "enablePush": true,
    "enableAnalytics": true
